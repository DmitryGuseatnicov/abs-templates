{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "exclude": ["./src/templates"]
}
